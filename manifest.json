{
  "manifest_version": 3,
  "name": "FlirtGPT - Context-Aware Flirt Lines",
  "version": "1.0.0",
  "description": "Generate witty flirt lines based on chat screenshots using AI",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "FlirtGPT"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
